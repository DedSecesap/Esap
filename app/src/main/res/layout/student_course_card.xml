            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/round_button_lb"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/marks_es1"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/round_button_lb"
            android:gravity="center"
            android:text="50"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/marks_quiz1"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/round_button_lb"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/marks_assi1"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/round_button_lb"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/marks_other1"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/round_button_lb"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/round_button_lb"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/Black"
            android:textSize="15dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView

            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Attendance %"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/attendance_perc"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="20dp"
            android:text="70" />

        <TextView

            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"

            android:gravity="center"
            android:text="Credits"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/credits_textview"
            android:layout_width="50dp"
            android:layout_height="33dp"
            android:layout_marginTop="5dp"

            android:gravity="center"
            android:text="11"
            android:textColor="@color/Black"
            android:textSize="20dp" >

        </TextView>
    </LinearLayout>




    <Button
        android:id="@+id/see_distri"
        android:layout_width="100dp"
        android:layout_height="30dp"

        android:layout_marginTop="500dp"
        android:background="@drawable/round_db"
        android:elevation="5dp"
        android:gravity="center"
        android:text="See distribution"
        android:textColor="@color/white"
        android:textSize="8dp"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />
</android.support.constraint.ConstraintLayout>