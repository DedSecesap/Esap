<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transparent_light_b"
    android:layout_marginTop="4dp"
    >

    <TextView
        android:id="@+id/profname"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Professor Name"
        android:textColor="#000033"
        android:textSize="15dp"
        android:background="@drawable/transparent_light_b"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_light_b"
        android:padding="4dp"
        android:text="DESCRIPTION"
        android:paddingLeft="5dp"
        android:layout_margin="4dp"
        android:paddingTop="5dp"
        android:textColor="#000033"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_light_b"
        android:padding="4dp"
        android:text="Research Link"
        android:textColor="#000033"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView33"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/round_db"
        android:padding="4dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/textView32"
        tools:layout_editor_absoluteY="83dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/transparent_light_b"
        android:padding="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Paper Published On"
        android:textColor="@color/Black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView35"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_light_blue"
        android:gravity="center"
        android:padding="4dp"
        android:text="12/08/2019"
        app:layout_constraintEnd_toEndOf="@+id/textView34"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/textView34"
        tools:layout_editor_absoluteY="137dp" />
</android.support.constraint.ConstraintLayout>